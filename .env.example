# Firebase Client Configuration
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin Configuration (Server-side)
# For local development, you can use the same project ID
# In production, use service account credentials
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY=your_private_key

# Google Cloud Configuration (for Vertex AI)
# Required for AI Oracle features (pages 500-599)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_PROJECT_ID=your_project_id
VERTEX_LOCATION=us-central1

# External API Keys
# ═══════════════════════════════════════════════════════════════════════════
# These API keys enable live data features. The application will show
# placeholder/demo data if these keys are not configured.
# ═══════════════════════════════════════════════════════════════════════════

# NEWS_API_KEY: NewsAPI key for live news headlines
# Get free key: https://newsapi.org/register
# Affected pages: News pages (200-299)
# Setup: 1. Sign up at https://newsapi.org/
#        2. Get your free API key
#        3. Add NEWS_API_KEY=your_key to .env.local
NEWS_API_KEY=your_newsapi_key_here

# SPORTS_API_KEY: API-Football key for live sports scores
# Get key: https://www.api-football.com/pricing
# Affected pages: Sports pages (300-399)
# Setup: 1. Sign up at https://www.api-football.com/
#        2. Get your API key
#        3. Add SPORTS_API_KEY=your_key to .env.local
SPORTS_API_KEY=your_sports_api_key_here

# ALPHA_VANTAGE_API_KEY: Alpha Vantage key for stock market data
# Get free key: https://www.alphavantage.co/support/#api-key
# Affected pages: Stock market pages (402)
# Setup: 1. Get free key at https://www.alphavantage.co/support/#api-key
#        2. Add ALPHA_VANTAGE_API_KEY=your_key to .env.local
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# OPENWEATHER_API_KEY: OpenWeatherMap key for weather forecasts
# Get free key: https://openweathermap.org/api
# Affected pages: Weather pages (420-449)
# Setup: 1. Sign up at https://openweathermap.org/api
#        2. Get your free API key
#        3. Add OPENWEATHER_API_KEY=your_key to .env.local
OPENWEATHER_API_KEY=your_openweather_key_here

# Development Configuration
# Set NODE_ENV to 'development' for local development
NODE_ENV=development

# Firebase Functions URL (for local development)
# Leave empty to use default emulator URL (http://127.0.0.1:5001)
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=

# Feature Flags (UX Redesign)
# ═══════════════════════════════════════════════════════════════════════════
# Control gradual rollout of new UX features
# Set to true/false, 1/0, yes/no, on/off (case insensitive)
# Default: all features enabled
# ═══════════════════════════════════════════════════════════════════════════

# ENABLE_FULL_SCREEN_LAYOUT: Full-screen layout with optimized space utilization
# Enables 90%+ screen usage with minimal padding
# Default: true
NEXT_PUBLIC_ENABLE_FULL_SCREEN_LAYOUT=true

# ENABLE_ANIMATIONS: Theme-specific animations, transitions, and visual effects
# Includes page transitions, loading animations, and decorative effects
# Default: true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# ENABLE_KIROWEEN_THEME: Halloween/Kiroween theme with spooky decorations
# Enables Haunting Mode with ghosts, pumpkins, bats, and glitch effects
# Default: true
NEXT_PUBLIC_ENABLE_KIROWEEN_THEME=true

# ENABLE_BREADCRUMBS: Navigation breadcrumb trail showing page history
# Shows "100 > 200 > 201" style navigation trail in headers
# Default: true
NEXT_PUBLIC_ENABLE_BREADCRUMBS=true

# ENABLE_DECORATIVE_ELEMENTS: Decorative ASCII art and visual embellishments
# Includes ASCII logos, themed decorations, and visual flourishes
# Default: true
NEXT_PUBLIC_ENABLE_DECORATIVE_ELEMENTS=true
