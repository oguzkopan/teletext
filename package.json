{
  "name": "modern-teletext",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:firestore-rules": "jest --config jest.firestore.config.js --runInBand",
    "emulators:start": "firebase emulators:start",
    "emulators:exec": "firebase emulators:exec",
    "deploy": "./scripts/deploy-production.sh",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "cd functions && npm run build && cd .. && firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "configure:functions": "./scripts/configure-functions-env.sh",
    "predeploy": "npm test && npm run build && cd functions && npm test && npm run build"
  },
  "dependencies": {
    "firebase": "^10.13.0",
    "firebase-admin": "^12.3.0",
    "firebase-functions": "^5.1.0",
    "next": "^14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.5",
    "typescript": "^5.5.0"
  }
}
