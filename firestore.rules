rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pages cache - public read, function write only
    match /pages_cache/{pageId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Conversations - user-specific access (placeholder for auth)
    match /conversations/{conversationId} {
      allow read, write: if true; // Will be restricted with auth later
    }
    
    // User preferences - user-specific access (placeholder for auth)
    match /user_preferences/{userId} {
      allow read, write: if true; // Will be restricted with auth later
    }
    
    // Analytics - read only for admins (placeholder)
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
